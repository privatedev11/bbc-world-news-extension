{

    "manifest_version": 2,
    "name": "BBC World News",
    "version": "1.0",

    "description": "BBC World News straight into your address bar",
    "homepage_url": "https://github.com/privatedev11/bbc-world-news-unofficial",
    "icons": {
        "48": "icons/48.png"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/48.png",
        "default_title": "BBC World News",
        "default_popup": "popup/index.html"
    },

    "browser_specific_settings": {
        "gecko": {
          "id": "{9c5c8842-0b80-42ee-ac0d-53215993db6b}",
          "strict_min_version": "42.0"
        }
      }
      


}